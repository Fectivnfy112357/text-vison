/* 文生视界微信小程序 - 首页样式 */

.index-container {
  width: 100%;
  height: 100vh;
  background: var(--bg-color-page);
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: var(--z-index-fixed);
  background: var(--bg-color-white);
  border-bottom: 1rpx solid var(--border-color-light);
  padding-top: var(--safe-area-top);
}

.navbar-content {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-lg);
  height: var(--navbar-height);
}

.user-avatar {
  width: var(--avatar-size-md);
  height: var(--avatar-size-md);
  margin-right: var(--spacing-md);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: var(--border-radius-full);
  border: 2rpx solid var(--border-color-light);
}

.search-container {
  flex: 1;
  margin-right: var(--spacing-md);
}

.search-box {
  display: flex;
  align-items: center;
  background: var(--bg-color-secondary);
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-sm) var(--spacing-md);
  height: 64rpx;
}

.search-icon {
  width: var(--icon-size-sm);
  height: var(--icon-size-sm);
  margin-right: var(--spacing-sm);
  opacity: 0.6;
}

.search-placeholder {
  font-size: var(--font-size-sm);
  color: var(--text-color-placeholder);
}

.notification-icon {
  position: relative;
  width: var(--icon-size-lg);
  height: var(--icon-size-lg);
}

.notification-icon .icon {
  width: 100%;
  height: 100%;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: var(--color-danger);
  color: var(--text-color-white);
  font-size: var(--font-size-xs);
  padding: 2rpx 8rpx;
  border-radius: var(--border-radius-full);
  min-width: 32rpx;
  text-align: center;
  line-height: 1.2;
}

/* 页面内容 */
.page-content {
  flex: 1;
  margin-top: calc(var(--safe-area-top) + var(--navbar-height) + var(--spacing-md));
}

.content-wrapper {
  padding-bottom: var(--safe-area-bottom);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color-light);
  border-top: 4rpx solid var(--color-primary);
  border-radius: var(--border-radius-full);
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: var(--spacing-md);
  font-size: var(--font-size-sm);
  color: var(--text-color-muted);
}

/* 轮播图 */
.banner-section {
  margin: var(--spacing-lg);
  margin-bottom: var(--spacing-xl);
}

.banner-swiper {
  width: 100%;
  height: 320rpx;
  border-radius: var(--border-radius-xl);
  overflow: hidden;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  padding: var(--spacing-xl) var(--spacing-lg) var(--spacing-lg);
}

.banner-content {
  color: var(--text-color-white);
}

.banner-title {
  display: block;
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  margin-bottom: var(--spacing-xs);
}

.banner-desc {
  display: block;
  font-size: var(--font-size-sm);
  opacity: 0.9;
}

/* 通用区块样式 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-color-primary);
}

.section-subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-color-muted);
  margin-top: var(--spacing-xs);
}

.section-action {
  display: flex;
  align-items: center;
}

.action-text {
  font-size: var(--font-size-sm);
  color: var(--color-primary);
  margin-right: var(--spacing-xs);
}

.action-icon {
  width: var(--icon-size-sm);
  height: var(--icon-size-sm);
  opacity: 0.8;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: var(--spacing-xl);
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
  padding: 0 var(--spacing-lg);
}

.menu-item {
  background: var(--bg-color-white);
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-xl);
  text-align: center;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-normal);
}

.menu-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

.menu-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--border-radius-xl);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto var(--spacing-md);
}

.menu-icon {
  width: var(--icon-size-xl);
  height: var(--icon-size-xl);
}

.menu-title {
  display: block;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-xs);
}

.menu-desc {
  display: block;
  font-size: var(--font-size-sm);
  color: var(--text-color-muted);
}

/* 用户统计 */
.stats-section {
  margin: 0 var(--spacing-lg) var(--spacing-xl);
}

.stats-card {
  background: var(--bg-color-white);
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-number {
  display: block;
  font-size: var(--font-size-xxl);
  font-weight: var(--font-weight-bold);
  color: var(--color-primary);
  margin-bottom: var(--spacing-xs);
}

.stats-label {
  display: block;
  font-size: var(--font-size-sm);
  color: var(--text-color-muted);
}

.stats-divider {
  width: 1rpx;
  height: 60rpx;
  background: var(--border-color-light);
  margin: 0 var(--spacing-lg);
}

/* 热门模板 */
.templates-section {
  margin-bottom: var(--spacing-xl);
}

.templates-scroll {
  white-space: nowrap;
}

.templates-list {
  display: flex;
  padding: 0 var(--spacing-lg);
}

.template-item {
  width: 280rpx;
  margin-right: var(--spacing-md);
  background: var(--bg-color-white);
  border-radius: var(--border-radius-xl);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-normal);
}

.template-item:last-child {
  margin-right: var(--spacing-lg);
}

.template-item:active {
  transform: scale(0.98);
}

.template-image-wrapper {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.template-image {
  width: 100%;
  height: 100%;
}

.template-overlay {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
}

.template-tag {
  background: rgba(0, 0, 0, 0.6);
  color: var(--text-color-white);
  font-size: var(--font-size-xs);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--border-radius-md);
}

.template-info {
  padding: var(--spacing-md);
}

.template-name {
  display: block;
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-sm);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.template-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.template-usage {
  font-size: var(--font-size-xs);
  color: var(--text-color-muted);
}

.template-rating {
  display: flex;
  align-items: center;
}

.star-icon {
  width: var(--icon-size-xs);
  height: var(--icon-size-xs);
  margin-right: 4rpx;
}

.rating-text {
  font-size: var(--font-size-xs);
  color: var(--text-color-muted);
}

/* 最近作品 */
.works-section {
  margin-bottom: var(--spacing-xl);
}

.works-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
  padding: 0 var(--spacing-lg);
}

.work-item {
  background: var(--bg-color-white);
  border-radius: var(--border-radius-xl);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-normal);
}

.work-item:active {
  transform: scale(0.98);
}

.work-image-wrapper {
  position: relative;
  width: 100%;
  height: 200rpx;
}

.work-image {
  width: 100%;
  height: 100%;
}

.work-type-tag {
  position: absolute;
  top: var(--spacing-sm);
  left: var(--spacing-sm);
  width: 32rpx;
  height: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: var(--border-radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

.type-icon {
  width: 20rpx;
  height: 20rpx;
  tint-color: var(--text-color-white);
}

.work-duration {
  position: absolute;
  bottom: var(--spacing-sm);
  right: var(--spacing-sm);
  background: rgba(0, 0, 0, 0.6);
  color: var(--text-color-white);
  font-size: var(--font-size-xs);
  padding: 4rpx var(--spacing-sm);
  border-radius: var(--border-radius-sm);
}

.work-info {
  padding: var(--spacing-md);
}

.work-title {
  display: block;
  font-size: var(--font-size-sm);
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-xs);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.work-time {
  display: block;
  font-size: var(--font-size-xs);
  color: var(--text-color-muted);
}

/* 未登录提示 */
.login-prompt {
  margin: var(--spacing-xl) var(--spacing-lg);
}

.prompt-card {
  background: var(--bg-color-white);
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-xxl);
  text-align: center;
  box-shadow: var(--shadow-sm);
}

.prompt-icon {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto var(--spacing-lg);
  opacity: 0.6;
}

.prompt-title {
  display: block;
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-medium);
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-sm);
}

.prompt-desc {
  display: block;
  font-size: var(--font-size-sm);
  color: var(--text-color-muted);
  margin-bottom: var(--spacing-xl);
  line-height: var(--line-height-relaxed);
}

.login-btn {
  background: var(--color-primary);
  color: var(--text-color-white);
  border: none;
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-md) var(--spacing-xxl);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
}

.login-btn::after {
  border: none;
}

/* 悬浮按钮 */
.fab-container {
  position: fixed;
  bottom: calc(var(--safe-area-bottom) + 120rpx);
  right: var(--spacing-lg);
  z-index: var(--z-index-fab);
}

.fab-button {
  width: 112rpx;
  height: 112rpx;
  background: var(--color-primary);
  border-radius: var(--border-radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-lg);
  transition: var(--transition-normal);
}

.fab-button:active {
  transform: scale(0.95);
}

.fab-icon {
  width: var(--icon-size-lg);
  height: var(--icon-size-lg);
  tint-color: var(--text-color-white);
}

/* 底部间距 */
.bottom-spacing {
  height: 200rpx;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .menu-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-sm);
  }
  
  .menu-item {
    padding: var(--spacing-lg);
  }
  
  .works-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-sm);
  }
}

@media (min-width: 414px) {
  .menu-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .works-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}