/* 文生视界微信小程序 - 模板页面样式 */
@import '/styles/variables.wxss';
@import '/styles/common.wxss';

.templates-container {
  height: 100vh;
  background: var(--bg-color-page);
  display: flex;
  flex-direction: column;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: var(--z-index-navbar);
  background: var(--bg-color-primary);
  padding-top: var(--safe-area-top);
  border-bottom: 1px solid var(--border-color-light);
}

.navbar-content {
  height: var(--navbar-height);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-md);
}

.navbar-left,
.navbar-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.navbar-title {
  flex: 1;
  text-align: center;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--text-color-primary);
}

/* 搜索栏 */
.search-section {
  position: fixed;
  top: calc(var(--safe-area-top) + var(--navbar-height));
  left: 0;
  right: 0;
  z-index: var(--z-index-sticky);
  background: var(--bg-color-primary);
  border-bottom: 1px solid var(--border-color-light);
}

.search-bar {
  padding: var(--spacing-md);
}

.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: var(--bg-color-secondary);
  border-radius: var(--border-radius-full);
  padding: 0 var(--spacing-md);
  height: 72rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: var(--spacing-sm);
  opacity: 0.6;
}

.search-input {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-color-primary);
  background: transparent;
  border: none;
  outline: none;
}

.clear-btn {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: var(--spacing-sm);
}

.clear-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

/* 搜索建议 */
.search-suggestions {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: var(--bg-color-primary);
  border-bottom: 1px solid var(--border-color-light);
  max-height: 60vh;
  overflow-y: auto;
}

.suggestion-section {
  padding: var(--spacing-md);
  border-bottom: 1px solid var(--border-color-light);
}

.suggestion-section:last-child {
  border-bottom: none;
}

.suggestion-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-sm);
}

.suggestion-title {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
  font-weight: var(--font-weight-medium);
}

.clear-history {
  font-size: var(--font-size-xs);
  color: var(--color-primary);
}

.suggestion-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.suggestion-item {
  background: var(--bg-color-secondary);
  color: var(--text-color-primary);
  font-size: var(--font-size-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--border-radius-full);
  border: 1px solid var(--border-color-light);
  transition: all var(--transition-fast);
}

.suggestion-item.hot {
  background: var(--color-primary-light);
  color: var(--color-primary);
  border-color: var(--color-primary);
}

.suggestion-item:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 页面内容 */
.page-content {
  flex: 1;
  padding-top: calc(var(--safe-area-top) + var(--navbar-height) + 100rpx);
  padding-bottom: var(--safe-area-bottom);
}

/* 分类筛选 */
.filter-section {
  background: var(--bg-color-primary);
  border-bottom: 1px solid var(--border-color-light);
  padding: var(--spacing-md) 0;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 var(--spacing-md);
  gap: var(--spacing-lg);
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xs);
  min-width: 80rpx;
  transition: all var(--transition-fast);
}

.category-item.active .category-icon {
  background: var(--color-primary-light);
  border-color: var(--color-primary);
}

.category-item.active .category-name {
  color: var(--color-primary);
  font-weight: var(--font-weight-medium);
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: var(--border-radius-full);
  background: var(--bg-color-secondary);
  border: 2rpx solid var(--border-color-light);
  padding: var(--spacing-sm);
  transition: all var(--transition-fast);
}

.category-name {
  font-size: var(--font-size-xs);
  color: var(--text-color-secondary);
  text-align: center;
  transition: all var(--transition-fast);
}

/* 排序区域 */
.sort-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-md);
  background: var(--bg-color-primary);
  border-bottom: 1px solid var(--border-color-light);
}

.sort-left {
  flex: 1;
}

.result-count {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
}

.count {
  color: var(--color-primary);
  font-weight: var(--font-weight-medium);
}

.sort-right {
  display: flex;
  align-items: center;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--bg-color-secondary);
  border-radius: var(--border-radius-md);
  border: 1px solid var(--border-color-light);
}

.sort-text {
  font-size: var(--font-size-sm);
  color: var(--text-color-primary);
}

.sort-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

/* 模板列表 */
.templates-list {
  padding: var(--spacing-md);
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  gap: var(--spacing-md);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--border-color-light);
  border-top: 4rpx solid var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 3rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
}

/* 模板网格 */
.templates-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-md);
}

.template-card {
  background: var(--bg-color-primary);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-fast);
}

.template-card:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

/* 模板预览 */
.template-preview {
  position: relative;
  width: 100%;
  height: 240rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
  transition: transform var(--transition-normal);
}

.template-card:active .preview-image {
  transform: scale(1.05);
}

.template-tags {
  position: absolute;
  top: var(--spacing-sm);
  left: var(--spacing-sm);
  display: flex;
  gap: var(--spacing-xs);
}

.tag {
  font-size: var(--font-size-xs);
  padding: 4rpx var(--spacing-xs);
  border-radius: var(--border-radius-sm);
  backdrop-filter: blur(8px);
  color: var(--color-white);
  font-weight: var(--font-weight-medium);
}

.type-tag {
  background: rgba(0, 0, 0, 0.6);
}

.category-tag {
  background: rgba(var(--color-primary-rgb), 0.8);
}

.favorite-btn {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: var(--border-radius-full);
  backdrop-filter: blur(8px);
  transition: all var(--transition-fast);
}

.favorite-btn.favorited {
  background: rgba(var(--color-error-rgb), 0.1);
}

.favorite-btn:active {
  transform: scale(0.9);
}

.favorite-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 模板信息 */
.template-info {
  padding: var(--spacing-md);
}

.template-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-xs);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.template-desc {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
  line-height: var(--line-height-relaxed);
  margin-bottom: var(--spacing-sm);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.template-stats {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.stat-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

.stat-text {
  font-size: var(--font-size-xs);
  color: var(--text-color-tertiary);
}

/* 加载更多 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-lg);
}

.load-more-content {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.load-more-text {
  font-size: var(--font-size-sm);
  color: var(--text-color-tertiary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) var(--spacing-md);
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.6;
}

.empty-title {
  font-size: var(--font-size-lg);
  color: var(--text-color-primary);
  font-weight: var(--font-weight-medium);
  margin-bottom: var(--spacing-sm);
}

.empty-desc {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
  line-height: var(--line-height-relaxed);
  margin-bottom: var(--spacing-lg);
}

.empty-btn {
  background: var(--color-primary);
  color: var(--color-white);
  border: none;
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
}

/* 底部间距 */
.bottom-spacing {
  height: var(--spacing-xl);
}

/* 排序选择器 */
.sort-picker {
  display: none;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .templates-grid {
    grid-template-columns: 1fr;
  }
  
  .template-preview {
    height: 300rpx;
  }
  
  .category-list {
    gap: var(--spacing-md);
  }
  
  .category-item {
    min-width: 70rpx;
  }
  
  .category-icon {
    width: 50rpx;
    height: 50rpx;
  }
}

@media (min-width: 768px) {
  .templates-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (min-width: 1024px) {
  .templates-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .template-tags .tag {
    backdrop-filter: blur(12px);
  }
  
  .favorite-btn {
    background: rgba(0, 0, 0, 0.7);
  }
  
  .favorite-btn.favorited {
    background: rgba(var(--color-error-rgb), 0.2);
  }
  
  .loading-spinner {
    border-color: rgba(255, 255, 255, 0.1);
    border-top-color: var(--color-primary);
  }
}