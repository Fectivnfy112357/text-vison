/* 文生视界微信小程序 - 模板页面样式 */
@import '/styles/variables.wxss';
@import '/styles/common.wxss';

.templates-container {
  height: 100vh;
  background: linear-gradient(135deg, #faf9f7 0%, #f5f3ff 50%, #e0f2fe 100%);
  display: flex;
  flex-direction: column;
  position: relative;
}

.templates-container::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 20% 20%, rgba(139, 92, 246, 0.1) 0%, transparent 50%),
              radial-gradient(circle at 80% 80%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: var(--z-index-navbar);
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  padding-top: var(--safe-area-top);
  border-bottom: 1px solid rgba(139, 92, 246, 0.1);
  box-shadow: 0 4px 20px rgba(139, 92, 246, 0.1);
}

.navbar-content {
  height: var(--navbar-height);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-lg);
  position: relative;
  z-index: 1;
}

.navbar-left,
.navbar-right {
  width: 44px;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--border-radius-full);
  background: rgba(139, 92, 246, 0.1);
  transition: var(--transition-bounce);
}

.navbar-left:active,
.navbar-right:active {
  transform: scale(0.9);
  background: rgba(139, 92, 246, 0.2);
}

.back-icon {
  width: 20px;
  height: 20px;
  filter: brightness(0) saturate(100%) invert(45%) sepia(84%) saturate(2270%) hue-rotate(244deg) brightness(97%) contrast(92%);
}

.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  color: #4c1d95;
  background: linear-gradient(135deg, #4c1d95 0%, #3b82f6 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* 搜索栏 */
.search-section {
  position: fixed;
  top: calc(var(--safe-area-top) + var(--navbar-height));
  left: 0;
  right: 0;
  z-index: var(--z-index-sticky);
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(139, 92, 246, 0.1);
}

.search-bar {
  padding: var(--spacing-lg);
  position: relative;
  z-index: 1;
}

.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(139, 92, 246, 0.2);
  border-radius: var(--border-radius-full);
  padding: 0 var(--spacing-lg);
  height: 48px;
  box-shadow: 0 4px 20px rgba(139, 92, 246, 0.1);
  transition: var(--transition-smooth);
  overflow: hidden;
}

.search-input-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, rgba(59, 130, 246, 0.05) 100%);
  opacity: 0;
  transition: var(--transition-smooth);
}

.search-input-wrapper:focus-within {
  border-color: rgba(139, 92, 246, 0.4);
  box-shadow: 0 8px 30px rgba(139, 92, 246, 0.2);
}

.search-input-wrapper:focus-within::before {
  opacity: 1;
}

.search-icon {
  width: 20px;
  height: 20px;
  margin-right: var(--spacing-sm);
  filter: brightness(0) saturate(100%) invert(45%) sepia(84%) saturate(2270%) hue-rotate(244deg) brightness(97%) contrast(92%);
  opacity: 0.7;
  z-index: 1;
  position: relative;
}

.search-input {
  flex: 1;
  font-size: 16px;
  color: #4c1d95;
  background: transparent;
  border: none;
  outline: none;
  z-index: 1;
  position: relative;
}

.search-input::placeholder {
  color: rgba(76, 29, 149, 0.5);
}

.clear-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: var(--spacing-sm);
  border-radius: var(--border-radius-full);
  background: rgba(139, 92, 246, 0.1);
  transition: var(--transition-bounce);
  z-index: 1;
  position: relative;
}

.clear-btn:active {
  transform: scale(0.9);
  background: rgba(139, 92, 246, 0.2);
}

.clear-icon {
  width: 16px;
  height: 16px;
  filter: brightness(0) saturate(100%) invert(45%) sepia(84%) saturate(2270%) hue-rotate(244deg) brightness(97%) contrast(92%);
  opacity: 0.7;
}

/* 搜索建议 */
.search-suggestions {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(139, 92, 246, 0.1);
  max-height: 60vh;
  overflow-y: auto;
  box-shadow: 0 8px 30px rgba(139, 92, 246, 0.15);
  border-radius: 0 0 var(--border-radius-xl) var(--border-radius-xl);
}

.suggestion-section {
  padding: var(--spacing-lg);
  border-bottom: 1px solid rgba(139, 92, 246, 0.1);
  position: relative;
}

.suggestion-section:last-child {
  border-bottom: none;
}

.suggestion-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
}

.suggestion-title {
  font-size: 14px;
  color: #6b46c1;
  font-weight: 600;
}

.clear-history {
  font-size: 12px;
  color: #8b5cf6;
  padding: 4px 8px;
  border-radius: var(--border-radius-md);
  background: rgba(139, 92, 246, 0.1);
  transition: var(--transition-bounce);
}

.clear-history:active {
  transform: scale(0.95);
  background: rgba(139, 92, 246, 0.2);
}

.suggestion-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.suggestion-item {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  color: #4c1d95;
  font-size: 14px;
  padding: 8px 16px;
  border-radius: var(--border-radius-full);
  border: 1px solid rgba(139, 92, 246, 0.2);
  transition: var(--transition-bounce);
  position: relative;
  overflow: hidden;
}

.suggestion-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%);
  opacity: 0;
  transition: var(--transition-smooth);
}

.suggestion-item.hot {
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.15) 0%, rgba(59, 130, 246, 0.15) 100%);
  color: #6b46c1;
  border-color: rgba(139, 92, 246, 0.3);
  font-weight: 500;
}

.suggestion-item:active {
  transform: scale(0.95);
  border-color: rgba(139, 92, 246, 0.4);
}

.suggestion-item:active::before {
  opacity: 1;
}

/* 页面内容 */
.page-content {
  flex: 1;
  padding-top: calc(var(--safe-area-top) + var(--navbar-height) + 80px);
  padding-bottom: var(--safe-area-bottom);
  position: relative;
  z-index: 1;
}

/* 分类筛选 */
.filter-section {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(139, 92, 246, 0.1);
  padding: var(--spacing-lg) 0;
  margin: 0 var(--spacing-lg) var(--spacing-md) var(--spacing-lg);
  border-radius: var(--border-radius-xl);
  box-shadow: 0 4px 20px rgba(139, 92, 246, 0.1);
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 var(--spacing-lg);
  gap: var(--spacing-xl);
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-sm);
  min-width: 60px;
  transition: var(--transition-bounce);
  cursor: pointer;
}

.category-item.active .category-icon {
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.2) 0%, rgba(59, 130, 246, 0.2) 100%);
  border-color: rgba(139, 92, 246, 0.4);
  transform: scale(1.1);
  box-shadow: 0 8px 25px rgba(139, 92, 246, 0.3);
}

.category-item.active .category-name {
  color: #6b46c1;
  font-weight: 600;
  transform: scale(1.05);
}

.category-icon {
  width: 48px;
  height: 48px;
  border-radius: var(--border-radius-full);
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(139, 92, 246, 0.2);
  padding: 8px;
  transition: var(--transition-bounce);
  position: relative;
  overflow: hidden;
}

.category-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, rgba(139, 92, 246, 0.1) 0%, transparent 70%);
  opacity: 0;
  transition: var(--transition-smooth);
}

.category-item:active .category-icon::before {
  opacity: 1;
}

.category-name {
  font-size: 12px;
  color: #6b7280;
  text-align: center;
  transition: var(--transition-bounce);
  font-weight: 500;
}

/* 排序区域 */
.sort-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg);
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(139, 92, 246, 0.1);
  margin: 0 var(--spacing-lg) var(--spacing-md) var(--spacing-lg);
  border-radius: var(--border-radius-xl);
  box-shadow: 0 4px 20px rgba(139, 92, 246, 0.1);
}

.sort-left {
  flex: 1;
}

.result-count {
  font-size: 14px;
  color: #6b7280;
  font-weight: 500;
}

.count {
  color: #8b5cf6;
  font-weight: 600;
  margin-left: 4px;
}

.sort-right {
  display: flex;
  align-items: center;
}

.sort-btn {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  padding: 8px 16px;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: var(--border-radius-full);
  border: 2px solid rgba(139, 92, 246, 0.2);
  transition: var(--transition-bounce);
  position: relative;
  overflow: hidden;
}

.sort-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%);
  opacity: 0;
  transition: var(--transition-smooth);
}

.sort-btn:active {
  transform: scale(0.95);
  border-color: rgba(139, 92, 246, 0.4);
}

.sort-btn:active::before {
  opacity: 1;
}

.sort-text {
  font-size: 14px;
  color: #4c1d95;
  font-weight: 500;
  z-index: 1;
  position: relative;
}

.sort-arrow {
  width: 16px;
  height: 16px;
  filter: brightness(0) saturate(100%) invert(45%) sepia(84%) saturate(2270%) hue-rotate(244deg) brightness(97%) contrast(92%);
  opacity: 0.7;
  z-index: 1;
  position: relative;
  transition: var(--transition-smooth);
}

.sort-btn:active .sort-arrow {
  transform: rotate(180deg);
}

/* 模板列表 */
.templates-list {
  padding: var(--spacing-md);
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) var(--spacing-md);
  gap: var(--spacing-lg);
}

.loading-animation {
  width: 48px;
  height: 48px;
  border: 3px solid rgba(139, 92, 246, 0.2);
  border-top: 3px solid #8b5cf6;
  border-radius: var(--border-radius-full);
  animation: spin 1.5s ease-in-out infinite;
}

.loading-animation.small {
  width: 32px;
  height: 32px;
  border-width: 2px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 14px;
  color: #6b7280;
  font-weight: 500;
}

/* 模板网格 */
.template-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-lg);
  padding: var(--spacing-lg);
}

.template-card {
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20px);
  border-radius: var(--border-radius-xl);
  overflow: hidden;
  border: 2px solid rgba(139, 92, 246, 0.1);
  transition: var(--transition-bounce);
  position: relative;
  box-shadow: 0 4px 20px rgba(139, 92, 246, 0.1);
}

.template-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.05) 0%, rgba(59, 130, 246, 0.05) 100%);
  opacity: 0;
  transition: var(--transition-smooth);
  z-index: 1;
}

.template-card:active {
  transform: scale(0.95);
  box-shadow: 0 8px 30px rgba(139, 92, 246, 0.2);
  border-color: rgba(139, 92, 246, 0.3);
}

.template-card:active::before {
  opacity: 1;
}

/* 模板预览 */
.template-preview {
  position: relative;
  width: 100%;
  height: 160px;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(59, 130, 246, 0.1) 100%);
  overflow: hidden;
  z-index: 2;
}

.template-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: var(--transition-bounce);
  z-index: 2;
  position: relative;
}

.template-card:active .template-image {
  transform: scale(1.1);
}

/* 模板标签 */
.template-tags {
  position: absolute;
  top: 8px;
  left: 8px;
  display: flex;
  gap: 6px;
  z-index: 3;
}

.template-tag {
  padding: 4px 8px;
  border-radius: var(--border-radius-full);
  font-size: 10px;
  font-weight: 600;
  backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: var(--transition-smooth);
}

.template-tag.type {
  background: rgba(139, 92, 246, 0.8);
  color: white;
  box-shadow: 0 2px 8px rgba(139, 92, 246, 0.3);
}

.template-tag.category {
  background: rgba(255, 255, 255, 0.9);
  color: #4c1d95;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 收藏按钮 */
.favorite-btn {
  position: absolute;
  top: 8px;
  right: 8px;
  width: 36px;
  height: 36px;
  border-radius: var(--border-radius-full);
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(15px);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition-bounce);
  border: 1px solid rgba(139, 92, 246, 0.2);
  z-index: 3;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.favorite-btn:active {
  transform: scale(0.85);
  box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
}

.favorite-btn.active {
  background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
  border-color: rgba(139, 92, 246, 0.4);
  box-shadow: 0 4px 15px rgba(139, 92, 246, 0.4);
}

.favorite-icon {
  width: 18px;
  height: 18px;
  filter: brightness(0) saturate(100%) invert(45%) sepia(84%) saturate(2270%) hue-rotate(244deg) brightness(97%) contrast(92%);
  transition: var(--transition-smooth);
}

.favorite-btn.active .favorite-icon {
  filter: brightness(0) invert(1);
  transform: scale(1.1);
}

/* 模板信息 */
.template-info {
  padding: var(--spacing-lg);
  z-index: 2;
  position: relative;
}

.template-name {
  font-size: 16px;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 6px;
  line-height: 1.4;
  z-index: 2;
  position: relative;
}

.template-desc {
  font-size: 13px;
  color: #6b7280;
  margin-bottom: 12px;
  line-height: 1.5;
  z-index: 2;
  position: relative;
}

.template-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 11px;
  color: #9ca3af;
  z-index: 2;
  position: relative;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 4px;
  font-weight: 500;
}

.stat-icon {
  width: 14px;
  height: 14px;
  filter: brightness(0) saturate(100%) invert(62%) sepia(8%) saturate(1166%) hue-rotate(202deg) brightness(94%) contrast(87%);
  opacity: 0.7;
}

.stat-text {
  font-size: var(--font-size-xs);
  color: var(--text-color-tertiary);
}

/* 加载更多 */
.load-more {
  padding: var(--spacing-xl) var(--spacing-lg);
  text-align: center;
}

.load-more-content {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.load-more-text {
  font-size: var(--font-size-sm);
  color: var(--text-color-tertiary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) var(--spacing-lg);
  gap: var(--spacing-lg);
  min-height: 320px;
  text-align: center;
}

.empty-icon {
  width: 80px;
  height: 80px;
  filter: brightness(0) saturate(100%) invert(45%) sepia(84%) saturate(2270%) hue-rotate(244deg) brightness(97%) contrast(92%);
  opacity: 0.3;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

.empty-title {
  font-size: 18px;
  font-weight: 600;
  color: #374151;
  text-align: center;
}

.empty-desc {
  font-size: 14px;
  color: #6b7280;
  text-align: center;
  line-height: 1.6;
  max-width: 240px;
}

.empty-btn {
  margin-top: var(--spacing-md);
  padding: 12px 24px;
  background: linear-gradient(135deg, #8b5cf6 0%, #3b82f6 100%);
  color: white;
  border-radius: var(--border-radius-full);
  font-size: 14px;
  font-weight: 600;
  transition: var(--transition-bounce);
  box-shadow: 0 4px 20px rgba(139, 92, 246, 0.3);
  position: relative;
  overflow: hidden;
}

.empty-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  opacity: 0;
  transition: var(--transition-smooth);
}

.empty-btn:active {
  transform: scale(0.95);
  box-shadow: 0 8px 30px rgba(139, 92, 246, 0.4);
}

.empty-btn:active::before {
  opacity: 1;
}

/* 底部间距 */
.bottom-spacing {
  height: var(--spacing-xl);
}

/* 排序选择器 */
.sort-picker {
  display: none;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .templates-grid {
    grid-template-columns: 1fr;
  }
  
  .template-preview {
    height: 300rpx;
  }
  
  .category-list {
    gap: var(--spacing-md);
  }
  
  .category-item {
    min-width: 70rpx;
  }
  
  .category-icon {
    width: 50rpx;
    height: 50rpx;
  }
}

@media (min-width: 768px) {
  .templates-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (min-width: 1024px) {
  .templates-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .template-tags .tag {
    backdrop-filter: blur(12px);
  }
  
  .favorite-btn {
    background: rgba(0, 0, 0, 0.7);
  }
  
  .favorite-btn.favorited {
    background: rgba(var(--color-error-rgb), 0.2);
  }
  
  .loading-spinner {
    border-color: rgba(255, 255, 255, 0.1);
    border-top-color: var(--color-primary);
  }
}