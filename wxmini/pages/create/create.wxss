/* 文生视界微信小程序 - 创作页面样式 */
@import '/styles/variables.wxss';
@import '/styles/common.wxss';

.create-container {
  min-height: 100vh;
  background: linear-gradient(135deg, var(--bg-color-primary) 0%, var(--color-secondary-light) 100%);
  display: flex;
  flex-direction: column;
  padding-bottom: var(--safe-area-bottom);
}

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: var(--z-index-navbar);
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  padding-top: var(--safe-area-top);
  border-bottom: 1px solid rgba(139, 69, 19, 0.1);
  transition: var(--transition-smooth);
}

.navbar-content {
  height: var(--navbar-height);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 var(--spacing-md);
}

.navbar-left {
  display: flex;
  align-items: center;
}

.navbar-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.back-btn {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--border-radius-lg);
  background: rgba(139, 69, 19, 0.1);
  border: none;
  padding: 0;
  transition: var(--transition-bounce);
}

.back-btn:active {
  transform: scale(0.9);
  background: rgba(139, 69, 19, 0.2);
}

.back-icon,
.icon {
  width: 20px;
  height: 20px;
  filter: brightness(0) saturate(100%) invert(27%) sepia(51%) saturate(2878%) hue-rotate(346deg) brightness(104%) contrast(97%);
}

.navbar-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--text-color-primary);
  margin-left: var(--spacing-sm);
}

.navbar-btn {
  padding: var(--spacing-xs) var(--spacing-md);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  color: white;
  border: none;
  border-radius: var(--border-radius-xl);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  transition: var(--transition-bounce);
  box-shadow: var(--shadow-glass);
}

.navbar-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

.help-icon {
  opacity: 0.7;
  transition: opacity var(--transition-fast);
}

.help-icon:active {
  opacity: 1;
}

/* 页面内容 */
.page-content {
  flex: 1;
  padding-top: calc(var(--safe-area-top) + var(--navbar-height));
  padding-bottom: var(--safe-area-bottom);
}

/* 内容区域 */
.content {
  flex: 1;
  padding: var(--spacing-lg);
  margin-top: calc(var(--status-bar-height) + var(--navbar-height));
  overflow-y: auto;
}

/* 创作类型切换 */
.type-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-xs);
  margin-bottom: var(--spacing-xl);
  box-shadow: var(--shadow-glass);
  border: 1px solid rgba(139, 69, 19, 0.1);
}

.type-tab {
  flex: 1;
  text-align: center;
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--border-radius-lg);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--text-color-secondary);
  transition: var(--transition-elastic);
  background: transparent;
  border: none;
  position: relative;
  overflow: hidden;
}

.type-tab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  opacity: 0;
  transition: var(--transition-smooth);
  border-radius: var(--border-radius-lg);
}

.type-tab.active::before {
  opacity: 1;
}

.type-tab.active {
  color: white;
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.type-tab:active {
  transform: scale(0.95);
}

/* 模板信息 */
.template-info {
  margin: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.template-card {
  background: var(--bg-color-primary);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-md);
  display: flex;
  gap: var(--spacing-md);
  box-shadow: var(--shadow-sm);
}

.template-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--border-radius-md);
  flex-shrink: 0;
}

.template-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--spacing-xs);
}

.template-name {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-medium);
  color: var(--text-color-primary);
}

.template-desc {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
  line-height: var(--line-height-relaxed);
}

.template-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-top: var(--spacing-xs);
}

.tag {
  background: var(--bg-color-secondary);
  color: var(--color-primary);
  font-size: var(--font-size-xs);
  padding: 4rpx var(--spacing-xs);
  border-radius: var(--border-radius-sm);
  border: 1px solid var(--color-primary-light);
}

/* 通用区块样式 */
.prompt-section,
.upload-section,
.params-section,
.generate-section {
  margin: 0 var(--spacing-md) var(--spacing-xl);
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(15px);
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-xl);
  border: 1px solid rgba(139, 69, 19, 0.1);
  box-shadow: var(--shadow-glass);
  transition: var(--transition-smooth);
}

.prompt-section:hover,
.upload-section:hover,
.params-section:hover,
.generate-section:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-lg);
}

.title-text {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--text-color-primary);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.title-required {
  color: var(--color-error);
  margin-left: 4rpx;
}

.title-action {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  color: var(--color-primary);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
}

.action-text {
  color: var(--color-primary);
}

.action-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform var(--transition-elastic);
}

.action-icon.rotated {
  transform: rotate(180deg);
}

/* 提示词输入 */
.prompt-input-wrapper {
  position: relative;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(15px);
  border-radius: var(--border-radius-xl);
  border: 2rpx solid rgba(139, 69, 19, 0.1);
  transition: var(--transition-smooth);
  box-shadow: var(--shadow-glass);
}

.prompt-input-wrapper:focus-within {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 8rpx rgba(139, 69, 19, 0.1);
  transform: scale(1.02);
  background: rgba(255, 255, 255, 0.95);
}

.prompt-input {
  width: 100%;
  min-height: 140rpx;
  padding: var(--spacing-lg);
  font-size: var(--font-size-md);
  line-height: var(--line-height-relaxed);
  color: var(--text-color-primary);
  background: transparent;
  border: none;
  outline: none;
}

.input-counter {
  position: absolute;
  bottom: var(--spacing-sm);
  right: var(--spacing-sm);
  font-size: var(--font-size-xs);
  color: var(--text-color-tertiary);
  font-weight: var(--font-weight-medium);
}

/* 提示词建议 */
.prompt-suggestions {
  margin-top: var(--spacing-lg);
}

.suggestions-title {
  font-size: var(--font-size-md);
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-md);
  font-weight: var(--font-weight-semibold);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.suggestions-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-md);
}

.suggestion-item {
  background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-secondary) 100%);
  color: white;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--border-radius-xl);
  border: none;
  transition: var(--transition-bounce);
  box-shadow: var(--shadow-sm);
}

.suggestion-item:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-xs);
}

/* 图片上传 */
.upload-area {
  background: var(--bg-color-primary);
  border: 2rpx dashed var(--border-color-light);
  border-radius: var(--border-radius-lg);
  padding: var(--spacing-xl);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-sm);
  transition: border-color var(--transition-fast);
}

.upload-area:active {
  border-color: var(--color-primary);
  background: var(--bg-color-secondary);
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.6;
}

.upload-text {
  font-size: var(--font-size-md);
  color: var(--text-color-primary);
  font-weight: var(--font-weight-medium);
}

.upload-tips {
  font-size: var(--font-size-xs);
  color: var(--text-color-tertiary);
  text-align: center;
}

.uploaded-image {
  background: var(--bg-color-primary);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.image-preview {
  width: 100%;
  height: 400rpx;
}

.image-actions {
  display: flex;
  padding: var(--spacing-md);
  gap: var(--spacing-md);
  background: var(--bg-color-secondary);
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-sm);
  border-radius: var(--border-radius-md);
  background: var(--bg-color-primary);
  border: 1px solid var(--border-color-light);
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
  transition: all var(--transition-fast);
}

.action-btn:active {
  background: var(--bg-color-secondary);
  transform: scale(0.95);
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 参数设置 */
.param-item {
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-lg);
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  border-radius: var(--border-radius-lg);
  border: 1px solid rgba(139, 69, 19, 0.08);
  transition: var(--transition-smooth);
}

.param-item:hover {
  transform: translateY(-1px);
  box-shadow: var(--shadow-md);
  background: rgba(255, 255, 255, 0.8);
}

.param-label {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-md);
  display: block;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.param-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-lg);
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border: 2px solid rgba(139, 69, 19, 0.1);
  border-radius: var(--border-radius-lg);
  font-size: var(--font-size-md);
  color: var(--text-color-primary);
  transition: var(--transition-elastic);
  box-shadow: var(--shadow-xs);
}

.picker-display:active {
  background: rgba(255, 255, 255, 0.95);
  border-color: var(--color-primary);
  transform: scale(0.98);
  box-shadow: 0 0 0 4px rgba(139, 69, 19, 0.1);
}

.picker-arrow {
  width: 18px;
  height: 18px;
  opacity: 0.7;
  transition: var(--transition-bounce);
  filter: brightness(0) saturate(100%) invert(27%) sepia(51%) saturate(2878%) hue-rotate(346deg) brightness(104%) contrast(97%);
}

.param-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.param-value {
  font-size: var(--font-size-md);
  color: var(--color-primary);
  font-weight: var(--font-weight-bold);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.param-slider {
  width: 100%;
  margin: var(--spacing-md) 0;
  height: 6px;
}

.param-tips {
  font-size: var(--font-size-sm);
  color: var(--text-color-secondary);
  margin-top: var(--spacing-sm);
  line-height: var(--line-height-relaxed);
  font-style: italic;
  opacity: 0.8;
}

/* 参数输入行 */
.param-input-row {
  display: flex;
  gap: var(--spacing-md);
  align-items: center;
}

.param-input {
  flex: 1;
  padding: var(--spacing-md);
  background: rgba(255, 255, 255, 0.9);
  border: 2px solid rgba(139, 69, 19, 0.1);
  border-radius: var(--border-radius-md);
  font-size: var(--font-size-md);
  color: var(--text-color-primary);
  transition: var(--transition-smooth);
}

.param-input:focus {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 4px rgba(139, 69, 19, 0.1);
  background: rgba(255, 255, 255, 0.95);
}

.param-btn {
  padding: var(--spacing-md) var(--spacing-lg);
  background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-secondary) 100%);
  color: white;
  border: none;
  border-radius: var(--border-radius-md);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  transition: var(--transition-bounce);
  box-shadow: var(--shadow-sm);
}

.param-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-xs);
}

/* 参数行（开关等） */
.param-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.param-switch {
  transform: scale(1.2);
}

.negative-prompt-input {
  width: 100%;
  min-height: 80rpx;
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--bg-color-secondary);
  border-radius: var(--border-radius-md);
  border: 1px solid var(--border-color-light);
  font-size: var(--font-size-sm);
  color: var(--text-color-primary);
  margin-top: var(--spacing-sm);
}

.advanced-params {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1px solid var(--border-color-light);
}

/* 生成按钮 */
.generate-btn {
  width: 100%;
  padding: var(--spacing-xl);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 50%, var(--color-accent) 100%);
  color: white;
  border: none;
  border-radius: var(--border-radius-xl);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  text-align: center;
  transition: var(--transition-elastic);
  box-shadow: 0 8px 32px rgba(139, 69, 19, 0.3);
  margin-top: var(--spacing-xl);
  position: relative;
  overflow: hidden;
}

.generate-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.generate-btn:active::before {
  left: 100%;
}

.generate-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4px 16px rgba(139, 69, 19, 0.4);
}

.generate-btn.disabled {
  background: linear-gradient(135deg, #e0e0e0 0%, #d0d0d0 100%);
  color: #999;
  cursor: not-allowed;
  box-shadow: var(--shadow-xs);
}

.generate-btn.generating {
  background: var(--color-secondary);
}

.btn-content {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

.btn-text {
  color: inherit;
}

/* 加载动画 */
.loading-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top: 3rpx solid var(--color-white);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 生成进度 */
.progress-container {
  margin-top: var(--spacing-xl);
  padding: var(--spacing-xl);
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(15px);
  border-radius: var(--border-radius-xl);
  box-shadow: var(--shadow-lg);
  border: 1px solid rgba(139, 69, 19, 0.1);
}

.progress-section {
  margin-top: var(--spacing-md);
}

.progress-bar {
  width: 100%;
  height: 12px;
  background: rgba(139, 69, 19, 0.1);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  position: relative;
  margin-bottom: var(--spacing-sm);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--color-primary) 0%, var(--color-secondary) 50%, var(--color-accent) 100%);
  border-radius: var(--border-radius-lg);
  transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.progress-text {
  text-align: center;
  font-size: var(--font-size-lg);
  color: var(--text-color-primary);
  margin-bottom: var(--spacing-lg);
  font-weight: var(--font-weight-medium);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.cancel-btn {
  color: var(--color-error);
  font-weight: var(--font-weight-medium);
}

/* 结果弹窗 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    backdrop-filter: blur(0px);
  }
  to {
    opacity: 1;
    backdrop-filter: blur(8px);
  }
}

.result-content {
  width: 90%;
  max-width: 500px;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: var(--border-radius-xl);
  padding: var(--spacing-xl);
  box-shadow: 0 20px 60px rgba(139, 69, 19, 0.2);
  border: 1px solid rgba(139, 69, 19, 0.1);
  animation: slideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideUp {
  from {
    transform: translateY(50px) scale(0.9);
    opacity: 0;
  }
  to {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-xl);
  padding-bottom: var(--spacing-lg);
  border-bottom: 1px solid rgba(139, 69, 19, 0.1);
}

.result-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-color-primary);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.close-btn {
  width: 40px;
  height: 40px;
  background: rgba(139, 69, 19, 0.1);
  border: none;
  border-radius: var(--border-radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-color-secondary);
  font-size: var(--font-size-lg);
  cursor: pointer;
  transition: var(--transition-bounce);
}

.close-btn:active {
  transform: scale(0.9);
  background: rgba(139, 69, 19, 0.2);
}

.result-image {
  width: 100%;
  border-radius: var(--border-radius-lg);
  margin-bottom: var(--spacing-xl);
  box-shadow: var(--shadow-md);
  transition: var(--transition-smooth);
}

.result-image:hover {
  transform: scale(1.02);
  box-shadow: var(--shadow-lg);
}

.result-info {
  margin-bottom: var(--spacing-xl);
  padding: var(--spacing-lg);
  background: rgba(139, 69, 19, 0.05);
  border-radius: var(--border-radius-lg);
  border: 1px solid rgba(139, 69, 19, 0.1);
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--spacing-md);
  font-size: var(--font-size-md);
  padding: var(--spacing-sm) 0;
}

.info-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.info-label {
  color: var(--text-color-secondary);
  font-weight: var(--font-weight-medium);
}

.info-value {
  color: var(--text-color-primary);
  font-weight: var(--font-weight-semibold);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.result-actions {
  display: flex;
  gap: var(--spacing-lg);
}

.action-btn {
  flex: 1;
  padding: var(--spacing-lg);
  border: none;
  border-radius: var(--border-radius-lg);
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  cursor: pointer;
  transition: var(--transition-elastic);
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.action-btn:active::before {
  left: 100%;
}

.action-btn.primary {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
  color: white;
  box-shadow: var(--shadow-md);
}

.action-btn.primary:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

.action-btn.secondary {
  background: rgba(255, 255, 255, 0.8);
  color: var(--text-color-primary);
  border: 2px solid rgba(139, 69, 19, 0.2);
  backdrop-filter: blur(10px);
}

.action-btn.secondary:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.9);
  border-color: var(--color-primary);
}

/* 底部间距 */
.bottom-spacing {
  height: var(--spacing-xl);
}

/* 响应式适配 */
@media (max-width: 375px) {
  .template-card {
    flex-direction: column;
    text-align: center;
  }
  
  .template-preview {
    width: 100%;
    height: 200rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .modal-content {
    width: 95%;
    max-height: 85%;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .generate-btn {
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  }
  
  .modal-backdrop {
    background: rgba(0, 0, 0, 0.8);
  }
  
  .loading-spinner {
    border-color: rgba(255, 255, 255, 0.2);
    border-top-color: var(--color-white);
  }
}