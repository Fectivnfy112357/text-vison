/* 文生视界微信小程序 - 样式变量定义 */

/* 主题色彩 */
page {
  /* 主色调 */
  --color-primary: #3cc51f;
  --color-primary-light: #5dd83f;
  --color-primary-dark: #2aa515;
  --color-primary-gradient: linear-gradient(135deg, #3cc51f 0%, #2aa515 100%);
  
  /* 辅助色 */
  --color-secondary: #1aad19;
  --color-accent: #ff6b35;
  
  /* 状态色 */
  --color-success: #07c160;
  --color-warning: #ff976a;
  --color-error: #fa5151;
  --color-info: #10aeff;
  
  /* 中性色 */
  --color-white: #ffffff;
  --color-black: #000000;
  --color-gray-50: #fafafa;
  --color-gray-100: #f5f5f5;
  --color-gray-200: #eeeeee;
  --color-gray-300: #e0e0e0;
  --color-gray-400: #bdbdbd;
  --color-gray-500: #9e9e9e;
  --color-gray-600: #757575;
  --color-gray-700: #616161;
  --color-gray-800: #424242;
  --color-gray-900: #212121;
  
  /* 文本颜色 */
  --text-color-primary: #1a1a1a;
  --text-color-secondary: #666666;
  --text-color-muted: #999999;
  --text-color-disabled: #cccccc;
  --text-color-white: #ffffff;
  --text-color-link: #3cc51f;
  
  /* 背景色 */
  --bg-color-page: #f8f9fa;
  --bg-color-white: #ffffff;
  --bg-color-secondary: #f5f5f5;
  --bg-color-hover: #f0f0f0;
  --bg-color-active: #e6e6e6;
  --bg-color-disabled: #f5f5f5;
  --bg-color-mask: rgba(0, 0, 0, 0.6);
  
  /* 边框色 */
  --border-color: #e0e0e0;
  --border-color-light: #f0f0f0;
  --border-color-dark: #d0d0d0;
  --border-color-primary: #3cc51f;
  --border-color-error: #fa5151;
  
  /* 字体大小 */
  --font-size-xs: 20rpx;   /* 10px */
  --font-size-sm: 24rpx;   /* 12px */
  --font-size-base: 28rpx; /* 14px */
  --font-size-md: 32rpx;   /* 16px */
  --font-size-lg: 36rpx;   /* 18px */
  --font-size-xl: 40rpx;   /* 20px */
  --font-size-2xl: 48rpx;  /* 24px */
  --font-size-3xl: 56rpx;  /* 28px */
  --font-size-4xl: 64rpx;  /* 32px */
  
  /* 字体粗细 */
  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  /* 行高 */
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.6;
  --line-height-loose: 2;
  
  /* 间距 */
  --spacing-xs: 8rpx;   /* 4px */
  --spacing-sm: 16rpx;  /* 8px */
  --spacing-md: 24rpx;  /* 12px */
  --spacing-lg: 32rpx;  /* 16px */
  --spacing-xl: 48rpx;  /* 24px */
  --spacing-2xl: 64rpx; /* 32px */
  --spacing-3xl: 96rpx; /* 48px */
  
  /* 圆角 */
  --border-radius-none: 0;
  --border-radius-sm: 4rpx;   /* 2px */
  --border-radius-md: 8rpx;   /* 4px */
  --border-radius-lg: 16rpx;  /* 8px */
  --border-radius-xl: 24rpx;  /* 12px */
  --border-radius-2xl: 32rpx; /* 16px */
  --border-radius-full: 50%;
  
  /* 阴影 */
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  --shadow-xl: 0 16rpx 64rpx rgba(0, 0, 0, 0.16);
  
  /* 过渡动画 */
  --transition-fast: 0.15s ease;
  --transition-normal: 0.3s ease;
  --transition-slow: 0.5s ease;
  
  /* Z-index层级 */
  --z-index-dropdown: 1000;
  --z-index-sticky: 1020;
  --z-index-fixed: 1030;
  --z-index-modal-backdrop: 1040;
  --z-index-modal: 1050;
  --z-index-popover: 1060;
  --z-index-tooltip: 1070;
  --z-index-toast: 1080;
  
  /* 容器最大宽度 */
  --container-max-width: 750rpx;
  
  /* 安全区域 */
  --safe-area-inset-top: env(safe-area-inset-top);
  --safe-area-inset-right: env(safe-area-inset-right);
  --safe-area-inset-bottom: env(safe-area-inset-bottom);
  --safe-area-inset-left: env(safe-area-inset-left);
  
  /* 导航栏高度 */
  --navbar-height: 88rpx; /* 44px */
  --tabbar-height: 98rpx; /* 49px */
  
  /* 内容区域高度 */
  --content-height: calc(100vh - var(--navbar-height) - var(--tabbar-height));
  
  /* 图片占位符 */
  --placeholder-color: #f0f0f0;
  --placeholder-gradient: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  
  /* 加载动画 */
  --loading-color: var(--color-primary);
  --loading-size: 40rpx;
  
  /* 分割线 */
  --divider-color: var(--border-color-light);
  --divider-thickness: 1rpx;
  
  /* 输入框 */
  --input-height: 88rpx; /* 44px */
  --input-padding: var(--spacing-md);
  --input-border-width: 1rpx;
  
  /* 按钮 */
  --button-height: 88rpx; /* 44px */
  --button-height-large: 100rpx; /* 50px */
  --button-height-small: 72rpx; /* 36px */
  --button-padding: var(--spacing-md) var(--spacing-lg);
  
  /* 卡片 */
  --card-padding: var(--spacing-lg);
  --card-margin: var(--spacing-md);
  --card-border-radius: var(--border-radius-lg);
  
  /* 列表项 */
  --list-item-height: 88rpx; /* 44px */
  --list-item-padding: var(--spacing-md);
  
  /* 头像尺寸 */
  --avatar-size-xs: 48rpx;  /* 24px */
  --avatar-size-sm: 64rpx;  /* 32px */
  --avatar-size-md: 80rpx;  /* 40px */
  --avatar-size-lg: 96rpx;  /* 48px */
  --avatar-size-xl: 128rpx; /* 64px */
  
  /* 图标尺寸 */
  --icon-size-xs: 24rpx;  /* 12px */
  --icon-size-sm: 32rpx;  /* 16px */
  --icon-size-md: 40rpx;  /* 20px */
  --icon-size-lg: 48rpx;  /* 24px */
  --icon-size-xl: 64rpx;  /* 32px */
}