/* 文生视界微信小程序 - 样式变量定义 */

/* 主题色彩 */
page {
  /* 主色调 - 雾紫色系 */
  --color-primary: #a78bfa;
  --color-primary-light: #c4b5fd;
  --color-primary-dark: #8b5cf6;
  --color-primary-gradient: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%);
  --color-primary-rgb: 167, 139, 250;
  
  /* 辅助色 - 淡蓝色系 */
  --color-secondary: #7dd3fc;
  --color-accent: #fbbf24;
  
  /* 状态色 */
  --color-success: #07c160;
  --color-warning: #ff976a;
  --color-error: #fa5151;
  --color-info: #10aeff;
  
  /* 中性色 - 奶白色系 */
  --color-white: #fefefe;
  --color-black: #1f1f23;
  --color-gray-50: #faf9fb;
  --color-gray-100: #f4f3f6;
  --color-gray-200: #ede9f0;
  --color-gray-300: #ddd6e3;
  --color-gray-400: #c4b8d1;
  --color-gray-500: #a599b5;
  --color-gray-600: #8a7d96;
  --color-gray-700: #6f6479;
  --color-gray-800: #544c5e;
  --color-gray-900: #3a3544;
  
  /* 文本颜色 */
  --text-color-primary: #3a3544;
  --text-color-secondary: #6f6479;
  --text-color-tertiary: #8a7d96;
  --text-color-muted: #a599b5;
  --text-color-disabled: #c4b8d1;
  --text-color-white: #fefefe;
  --text-color-link: #a78bfa;
  
  /* 背景色 */
  --bg-color-page: #faf9fb;
  --bg-color-primary: #fefefe;
  --bg-color-secondary: #f4f3f6;
  --bg-color-hover: #ede9f0;
  --bg-color-active: #ddd6e3;
  --bg-color-disabled: #f4f3f6;
  --bg-color-mask: rgba(58, 53, 68, 0.6);
  --bg-color-glass: rgba(254, 254, 254, 0.8);
  
  /* 边框色 */
  --border-color: #ede9f0;
  --border-color-light: #f4f3f6;
  --border-color-dark: #ddd6e3;
  --border-color-primary: #a78bfa;
  --border-color-error: #f87171;
  
  /* 字体大小 */
  --font-size-xs: 20rpx;   /* 10px */
  --font-size-sm: 24rpx;   /* 12px */
  --font-size-base: 28rpx; /* 14px */
  --font-size-md: 32rpx;   /* 16px */
  --font-size-lg: 36rpx;   /* 18px */
  --font-size-xl: 40rpx;   /* 20px */
  --font-size-2xl: 48rpx;  /* 24px */
  --font-size-3xl: 56rpx;  /* 28px */
  --font-size-4xl: 64rpx;  /* 32px */
  
  /* 字体粗细 */
  --font-weight-light: 300;
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  /* 行高 */
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.6;
  --line-height-loose: 2;
  
  /* 间距 */
  --spacing-xs: 8rpx;   /* 4px */
  --spacing-sm: 16rpx;  /* 8px */
  --spacing-md: 24rpx;  /* 12px */
  --spacing-lg: 32rpx;  /* 16px */
  --spacing-xl: 48rpx;  /* 24px */
  --spacing-2xl: 64rpx; /* 32px */
  --spacing-3xl: 96rpx; /* 48px */
  
  /* 圆角 - 果冻感设计 */
  --border-radius-none: 0;
  --border-radius-sm: 8rpx;   /* 4px */
  --border-radius-md: 16rpx;  /* 8px */
  --border-radius-lg: 24rpx;  /* 12px */
  --border-radius-xl: 32rpx;  /* 16px */
  --border-radius-2xl: 48rpx; /* 24px */
  --border-radius-3xl: 64rpx; /* 32px */
  --border-radius-full: 50%;
  
  /* 阴影 - 柔和果冻感 */
  --shadow-sm: 0 4rpx 16rpx rgba(167, 139, 250, 0.08);
  --shadow-md: 0 8rpx 24rpx rgba(167, 139, 250, 0.12);
  --shadow-lg: 0 16rpx 40rpx rgba(167, 139, 250, 0.16);
  --shadow-xl: 0 24rpx 64rpx rgba(167, 139, 250, 0.20);
  --shadow-glass: 0 8rpx 32rpx rgba(167, 139, 250, 0.1), inset 0 1rpx 0 rgba(255, 255, 255, 0.2);
  
  /* 过渡动画 - 柔和自然 */
  --transition-fast: 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-normal: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-slow: 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-bounce: 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  --transition-elastic: 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  
  /* Z-index层级 */
  --z-index-dropdown: 1000;
  --z-index-sticky: 1020;
  --z-index-fixed: 1030;
  --z-index-modal-backdrop: 1040;
  --z-index-modal: 1050;
  --z-index-popover: 1060;
  --z-index-tooltip: 1070;
  --z-index-toast: 1080;
  
  /* 容器最大宽度 */
  --container-max-width: 750rpx;
  
  /* 安全区域 */
  --safe-area-inset-top: env(safe-area-inset-top);
  --safe-area-inset-right: env(safe-area-inset-right);
  --safe-area-inset-bottom: env(safe-area-inset-bottom);
  --safe-area-inset-left: env(safe-area-inset-left);
  
  /* 导航栏高度 */
  --navbar-height: 88rpx; /* 44px */
  --tabbar-height: 98rpx; /* 49px */
  
  /* 内容区域高度 */
  --content-height: calc(100vh - var(--navbar-height) - var(--tabbar-height));
  
  /* 图片占位符 */
  --placeholder-color: #f0f0f0;
  --placeholder-gradient: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  
  /* 加载动画 */
  --loading-color: var(--color-primary);
  --loading-size: 40rpx;
  
  /* 分割线 */
  --divider-color: var(--border-color-light);
  --divider-thickness: 1rpx;
  
  /* 输入框 */
  --input-height: 88rpx; /* 44px */
  --input-padding: var(--spacing-md);
  --input-border-width: 1rpx;
  
  /* 按钮 */
  --button-height: 88rpx; /* 44px */
  --button-height-large: 100rpx; /* 50px */
  --button-height-small: 72rpx; /* 36px */
  --button-padding: var(--spacing-md) var(--spacing-lg);
  
  /* 卡片 */
  --card-padding: var(--spacing-lg);
  --card-margin: var(--spacing-md);
  --card-border-radius: var(--border-radius-lg);
  
  /* 列表项 */
  --list-item-height: 88rpx; /* 44px */
  --list-item-padding: var(--spacing-md);
  
  /* 头像尺寸 */
  --avatar-size-xs: 48rpx;  /* 24px */
  --avatar-size-sm: 64rpx;  /* 32px */
  --avatar-size-md: 80rpx;  /* 40px */
  --avatar-size-lg: 96rpx;  /* 48px */
  --avatar-size-xl: 128rpx; /* 64px */
  
  /* 图标尺寸 */
  --icon-size-xs: 24rpx;  /* 12px */
  --icon-size-sm: 32rpx;  /* 16px */
  --icon-size-md: 40rpx;  /* 20px */
  --icon-size-lg: 48rpx;  /* 24px */
  --icon-size-xl: 64rpx;  /* 32px */
}