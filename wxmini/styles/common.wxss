/* 文生视界微信小程序 - 通用样式 */

/* 重置样式 */
page,
view,
text,
image,
button,
input,
textarea,
label,
navigator {
  box-sizing: border-box;
}

/* 清除浮动 */
.clearfix::after {
  content: "";
  display: table;
  clear: both;
}

/* 文本省略 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}

.text-ellipsis-3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  white-space: normal;
}

/* 图片样式 */
.image {
  display: block;
  width: 100%;
  height: auto;
}

.image-cover {
  object-fit: cover;
}

.image-contain {
  object-fit: contain;
}

.image-round {
  border-radius: var(--border-radius-full);
}

.image-square {
  aspect-ratio: 1;
}

.image-placeholder {
  background: var(--placeholder-color);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-color-muted);
  font-size: var(--font-size-sm);
}

/* 头像样式 */
.avatar {
  display: inline-block;
  border-radius: var(--border-radius-full);
  overflow: hidden;
  background: var(--placeholder-color);
}

.avatar-xs {
  width: var(--avatar-size-xs);
  height: var(--avatar-size-xs);
}

.avatar-sm {
  width: var(--avatar-size-sm);
  height: var(--avatar-size-sm);
}

.avatar-md {
  width: var(--avatar-size-md);
  height: var(--avatar-size-md);
}

.avatar-lg {
  width: var(--avatar-size-lg);
  height: var(--avatar-size-lg);
}

.avatar-xl {
  width: var(--avatar-size-xl);
  height: var(--avatar-size-xl);
}

/* 图标样式 */
.icon {
  display: inline-block;
  vertical-align: middle;
}

.icon-xs {
  width: var(--icon-size-xs);
  height: var(--icon-size-xs);
}

.icon-sm {
  width: var(--icon-size-sm);
  height: var(--icon-size-sm);
}

.icon-md {
  width: var(--icon-size-md);
  height: var(--icon-size-md);
}

.icon-lg {
  width: var(--icon-size-lg);
  height: var(--icon-size-lg);
}

.icon-xl {
  width: var(--icon-size-xl);
  height: var(--icon-size-xl);
}

/* 分割线 */
.divider {
  height: var(--divider-thickness);
  background: var(--divider-color);
  border: none;
  margin: var(--spacing-md) 0;
}

.divider-vertical {
  width: var(--divider-thickness);
  height: auto;
  display: inline-block;
  margin: 0 var(--spacing-md);
}

/* 标签样式 */
.tag {
  display: inline-flex;
  align-items: center;
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--border-radius-md);
  font-size: var(--font-size-xs);
  line-height: 1;
  background: var(--bg-color-secondary);
  color: var(--text-color-secondary);
}

.tag-primary {
  background: var(--color-primary);
  color: var(--text-color-white);
}

.tag-success {
  background: var(--color-success);
  color: var(--text-color-white);
}

.tag-warning {
  background: var(--color-warning);
  color: var(--text-color-white);
}

.tag-error {
  background: var(--color-error);
  color: var(--text-color-white);
}

.tag-outline {
  background: transparent;
  border: 1rpx solid var(--border-color);
}

/* 徽章样式 */
.badge {
  position: relative;
  display: inline-block;
}

.badge::after {
  content: attr(data-badge);
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  border-radius: var(--border-radius-full);
  background: var(--color-error);
  color: var(--text-color-white);
  font-size: var(--font-size-xs);
  line-height: 32rpx;
  text-align: center;
  transform: scale(0.8);
}

.badge-dot::after {
  content: "";
  width: 16rpx;
  height: 16rpx;
  border-radius: var(--border-radius-full);
  top: -4rpx;
  right: -4rpx;
  min-width: auto;
  padding: 0;
}

/* 加载状态 */
.loading-spinner {
  display: inline-block;
  width: var(--loading-size);
  height: var(--loading-size);
  border: 4rpx solid var(--border-color-light);
  border-top: 4rpx solid var(--loading-color);
  border-radius: var(--border-radius-full);
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.loading-dots {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.loading-dots::before,
.loading-dots::after {
  content: "";
  width: 8rpx;
  height: 8rpx;
  border-radius: var(--border-radius-full);
  background: var(--loading-color);
  animation: bounce 1.4s ease-in-out infinite both;
}

.loading-dots::before {
  animation-delay: -0.32s;
}

.loading-dots::after {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

/* 骨架屏 */
.skeleton {
  background: var(--placeholder-gradient);
  background-size: 400% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.skeleton-text {
  height: 1em;
  border-radius: var(--border-radius-sm);
  margin-bottom: var(--spacing-xs);
}

.skeleton-title {
  height: 1.2em;
  width: 60%;
  border-radius: var(--border-radius-sm);
  margin-bottom: var(--spacing-sm);
}

.skeleton-avatar {
  width: var(--avatar-size-md);
  height: var(--avatar-size-md);
  border-radius: var(--border-radius-full);
}

.skeleton-image {
  width: 100%;
  height: 200rpx;
  border-radius: var(--border-radius-md);
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-3xl) var(--spacing-lg);
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.6;
}

.empty-title {
  font-size: var(--font-size-lg);
  color: var(--text-color-secondary);
  margin-bottom: var(--spacing-sm);
}

.empty-desc {
  font-size: var(--font-size-sm);
  color: var(--text-color-muted);
  line-height: var(--line-height-relaxed);
}

/* 错误状态 */
.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-3xl) var(--spacing-lg);
  text-align: center;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: var(--spacing-lg);
  color: var(--color-error);
}

.error-title {
  font-size: var(--font-size-lg);
  color: var(--color-error);
  margin-bottom: var(--spacing-sm);
}

.error-desc {
  font-size: var(--font-size-sm);
  color: var(--text-color-muted);
  line-height: var(--line-height-relaxed);
  margin-bottom: var(--spacing-lg);
}

/* 安全区域适配 */
.safe-area-top {
  padding-top: var(--safe-area-inset-top);
}

.safe-area-bottom {
  padding-bottom: var(--safe-area-inset-bottom);
}

.safe-area-left {
  padding-left: var(--safe-area-inset-left);
}

.safe-area-right {
  padding-right: var(--safe-area-inset-right);
}

/* 固定定位 */
.fixed-top {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: var(--z-index-fixed);
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: var(--z-index-fixed);
}

/* 粘性定位 */
.sticky-top {
  position: sticky;
  top: 0;
  z-index: var(--z-index-sticky);
}

/* 遮罩层 */
.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--bg-color-mask);
  z-index: var(--z-index-modal-backdrop);
}

/* 居中布局 */
.center {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.center-content {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: var(--content-height);
}

/* 滚动容器 */
.scroll-view {
  height: 100%;
  overflow: hidden;
}

.scroll-x {
  overflow-x: auto;
  overflow-y: hidden;
  white-space: nowrap;
}

.scroll-y {
  overflow-x: hidden;
  overflow-y: auto;
}

/* 触摸反馈 */
.touchable {
  transition: var(--transition-fast);
}

.touchable:active {
  transform: scale(0.98);
  opacity: 0.8;
}

/* 禁用状态 */
.disabled {
  opacity: 0.6;
  pointer-events: none;
  cursor: not-allowed;
}

/* 选中状态 */
.selected {
  background: var(--color-primary);
  color: var(--text-color-white);
}

/* 激活状态 */
.active {
  background: var(--bg-color-active);
}

/* 悬停状态 */
.hoverable:hover {
  background: var(--bg-color-hover);
}