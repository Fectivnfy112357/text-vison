<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.textvision.mapper.UserMapper">

    <!-- 根据邮箱查找用户 -->
    <select id="findByEmail" parameterType="string" resultType="com.textvision.entity.User">
        SELECT * FROM user WHERE email = #{email} AND deleted = 0
    </select>

    <!-- 检查邮箱是否存在 -->
    <select id="existsByEmail" parameterType="string" resultType="boolean">
        SELECT COUNT(*) > 0 FROM user WHERE email = #{email} AND deleted = 0
    </select>

    <!-- 检查用户名是否存在 -->
    <select id="existsByName" parameterType="string" resultType="boolean">
        SELECT COUNT(*) > 0 FROM user WHERE name = #{name} AND deleted = 0
    </select>

</mapper>